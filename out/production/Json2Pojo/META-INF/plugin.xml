<idea-plugin>
  <id>com.test.jinesh.json.to.pojo</id>
  <name>Awesome Pojo Generator</name>
  <version>1.0</version>
  <vendor email="jineshfrancisofficial@gmail.com" url="https://github.com/jineshfrancs">jineshfrancs</vendor>

  <description><![CDATA[
      Plugin to generate Pojo classes from json.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>



  <actions>
    <!-- Add your actions here -->
    <action id="actions.GeneratePojoAction" class="actions.GeneratePojoAction" text="Java Class From Json"
            description="creates java classes from the json in the specified directory"  icon="/icons/jsonIcon.png">
      <add-to-group group-id="NewGroup" anchor="first"/>


    </action>
  </actions>

</idea-plugin>